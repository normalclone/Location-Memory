<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="wrap_content"
    android:layout_height="wrap_content"
    android:layout_marginEnd="8dp"
    android:layout_marginLeft="8dp"
    android:layout_marginRight="8dp"
    android:layout_marginStart="8dp"
    android:layout_marginTop="16dp"
    android:layout_marginBottom="16dp"
    android:paddingTop="16dp"
    android:paddingLeft="16dp"
    android:paddingRight="16dp"
    android:paddingBottom="32dp"
    android:background="@drawable/ic_live_help_white_54dp"
    android:elevation="8dp"
    android:orientation="horizontal">
        <LinearLayout
            android:orientation="vertical"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content">
            <TextView
                android:text="Location"
                android:textStyle="bold"
                android:layout_marginRight="20dp"
                android:id="@+id/tv_location_name"
                android:layout_width="wrap_content"
                android:maxWidth="200dp"
                android:layout_height="wrap_content"
                android:layout_alignTop="@id/circleView"
                android:layout_marginBottom="4dp"
                android:layout_toEndOf="@id/circleView"
                android:layout_toRightOf="@id/circleView"
                android:textSize="16dp"
                android:textColor="@color/colorPrimary" />

            <TextView
                android:text="DD: 2000/12/12"
                android:id="@+id/tv_discovery_date"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginRight="20dp"
                android:layout_alignBottom="@id/circleView"
                android:layout_alignLeft="@id/tv_location_name"
                android:layout_alignStart="@id/tv_location_name"
                android:layout_marginTop="4dp"
                android:textSize="12dp"
                android:textColor="@color/colorPrimary" />
        </LinearLayout>
    <LinearLayout
        android:layout_gravity="center_vertical"
        android:orientation="vertical"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content">
        <com.google.android.material.floatingactionbutton.FloatingActionButton
            android:id="@+id/fab_save_memory"
            app:backgroundTint="@color/colorEmpty"
            android:layout_gravity="center_vertical"
            app:fabSize="mini"
            android:tooltipText="Add new memory"
            android:src="@drawable/ic_edit_location_black_24dp"
            android:foreground="@drawable/ripple"
            android:background="@color/colorEmpty"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            />
        <com.google.android.material.floatingactionbutton.FloatingActionButton
            android:id="@+id/fab_location_detail"
            app:backgroundTint="@color/colorEmpty"
            android:layout_gravity="center_vertical"
            app:fabSize="mini"
            android:tooltipText="See location detail"
            android:src="@drawable/ic_local_library_black_24dp"
            android:foreground="@drawable/ripple"
            android:background="@color/colorEmpty"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            />
    </LinearLayout>



</LinearLayout>